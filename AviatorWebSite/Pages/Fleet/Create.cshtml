@page
@model AviatorWebSite.Pages.Fleet.CreateModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Add Airplane</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="AirplaneCard.Model"></label>
            <input asp-for="AirplaneCard.Model" class="form-control" />
            <span asp-validation-for="AirplaneCard.Model" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AirplaneCard.Range"></label>
            <input asp-for="AirplaneCard.Range" class="form-control" />
            <span asp-validation-for="AirplaneCard.Range" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AirplaneCard.Speed"></label>
            <input asp-for="AirplaneCard.Speed" class="form-control" />
            <span asp-validation-for="AirplaneCard.Speed" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AirplaneCard.Image"></label>
            <input asp-for="AirplaneCard.Image" class="form-control" />
            <span asp-validation-for="AirplaneCard.Image" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All"></div>
        <button type="submit" class="btn btn-primary" style="width:110px;">Create</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:130px;">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
